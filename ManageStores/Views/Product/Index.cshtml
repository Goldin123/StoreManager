@model List<ManageStoresModel.ProductDetail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Internal.cshtml";
}

<h2>Products &nbsp;&nbsp;</h2>
<section class="content">
    <div class="container-fluid">
        <br />
        <div class="row">
            <div>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">List of Products</h3>
                    </div>
                    <div class="card-body">
                        <table id="myTable" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>ProductName</th>
                                    <th>Weighted Item</th>
                                    <th>Suggested Selling Price</th>
                                    <th>Date Updated</th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (Model.Count > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.ProductName</td>
                                            <td>@item.WeightedItem</td>
                                            <td>@String.Format("{0:c}", (item.SuggestedSellingPrice))</td>
                                            <td>@item.DateUpdated</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                    <div class="card-footer">
                        @Html.ActionLink("Add Products", "AddProduct", "Product", new object { }, new { @class = "btn btn-warning" })
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>
